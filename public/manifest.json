{
  "manifest_version": 3,
  "name": "My Vite Extension",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js" : ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources":  [
    {
      "resources": ["fonts/OpenDyslexic3-Regular.ttf"],

      "matches": ["<all_urls>"]
    }
  ]
}